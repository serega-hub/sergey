# –ö–æ–º–∞–Ω–¥–∞ /test ‚Äî –∑–∞–ø—É—Å–∫–∞–µ–º —Ç–µ—Å—Ç
@bot.message_handler(commands=['health_test'])
def start_test(message):
    user_id = message.from_user.id
    user_states[user_id] = 0  # –∏–Ω–¥–µ–∫—Å —Ç–µ–∫—É—â–µ–≥–æ –≤–æ–ø—Ä–æ—Å–∞
    user_answers[user_id] = []

    bot.send_message(message.chat.id, "–î–∞–≤–∞–π –ø—Ä–æ–≤–µ—Ä–∏–º —Ç–≤–æ–µ –∑–¥–æ—Ä–æ–≤—å–µ! –û—Ç–≤–µ—á–∞–π –Ω–∞ –≤–æ–ø—Ä–æ—Å—ã:")

    # –ü–µ—Ä–≤—ã–π –≤–æ–ø—Ä–æ—Å (—Å–æ–Ω) ‚Äî –∫–Ω–æ–ø–∫–∏ –æ—Ç 4 –¥–æ 10
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True, one_time_keyboard=True)
    buttons = [str(i) for i in range(4, 11)]
    for i in range(0, len(buttons), 4):
        markup.add(*buttons[i:i+4])
    bot.send_message(message.chat.id, test_questions[0], reply_markup=markup)


@bot.message_handler(func=lambda message: message.from_user.id in user_states)
def handle_test_answer(message):
    user_id = message.from_user.id
    state = user_states[user_id]
    answer = message.text.strip()
    
    user_answers[user_id].append(answer)
    state += 1

    if state < len(test_questions):
        user_states[user_id] = state

        # –í—Ç–æ—Ä–æ–π –≤–æ–ø—Ä–æ—Å (–≤–æ–¥–∞) ‚Äî –∫–Ω–æ–ø–∫–∏ 0‚Äì10
        if state == 1:
            markup = types.ReplyKeyboardMarkup(resize_keyboard=True, one_time_keyboard=True)
            buttons = [str(i) for i in range(0, 11)]
            for i in range(0, len(buttons), 4):
                markup.add(*buttons[i:i+4])
            bot.send_message(message.chat.id, test_questions[state], reply_markup=markup)

        # –¢—Ä–µ—Ç–∏–π –≤–æ–ø—Ä–æ—Å (—Å–ø–æ—Ä—Ç) ‚Äî –∫–Ω–æ–ø–∫–∏ "–î–∞"/"–ù–µ—Ç"
        elif state == 2:
            markup = types.ReplyKeyboardMarkup(resize_keyboard=True, one_time_keyboard=True)
            markup.add("–î–∞", "–ù–µ—Ç")
            bot.send_message(message.chat.id, test_questions[state], reply_markup=markup)

    else:
        # –¢–µ—Å—Ç –∑–∞–≤–µ—Ä—à—ë–Ω ‚Äî –∞–Ω–∞–ª–∏–∑
        bot.send_message(message.chat.id, "–°–ø–∞—Å–∏–±–æ –∑–∞ –æ—Ç–≤–µ—Ç—ã! –í–æ—Ç —Ç–≤–æ–π –Ω–µ–±–æ–ª—å—à–æ–π —Ä–µ–∑—É–ª—å—Ç–∞—Ç:", reply_markup=types.ReplyKeyboardRemove())

        sleep_hours = user_answers[user_id][0]
        water_glasses = user_answers[user_id][1]
        sport = user_answers[user_id][2].lower()

        try:
            sleep_hours = int(sleep_hours)
            water_glasses = int(water_glasses)
        except:
            bot.send_message(message.chat.id, "–ü–æ—Ö–æ–∂–µ, —Ç—ã –≤–≤—ë–ª(–∞) —á—Ç–æ-—Ç–æ –Ω–µ —Ç–∞–∫. –ü–æ–ø—Ä–æ–±—É–π —Å–Ω–æ–≤–∞ –∫–æ–º–∞–Ω–¥–æ–π /test.")
            user_states.pop(user_id)
            user_answers.pop(user_id)
            return

        advice = []

        if sleep_hours < 7:
            advice.append("–ü–æ–ø—Ä–æ–±—É–π —Å–ø–∞—Ç—å –Ω–µ –º–µ–Ω–µ–µ 7 —á–∞—Å–æ–≤ ‚Äî —ç—Ç–æ –≤–∞–∂–Ω–æ –¥–ª—è –∑–¥–æ—Ä–æ–≤—å—è.")
        else:
            advice.append("–û—Ç–ª–∏—á–Ω–æ, —á—Ç–æ —Ç—ã —Å–ø–∏—à—å –¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ!")

        if water_glasses < 6:
            advice.append("–°—Ç–∞—Ä–∞–π—Å—è –ø–∏—Ç—å –±–æ–ª—å—à–µ –≤–æ–¥—ã ‚Äî –Ω–µ –º–µ–Ω–µ–µ 6 —Å—Ç–∞–∫–∞–Ω–æ–≤ –≤ –¥–µ–Ω—å.")
        else:
            advice.append("–¢—ã —Ö–æ—Ä–æ—à–æ –ø—å—ë—à—å –≤–æ–¥—É, —Ç–∞–∫ –¥–µ—Ä–∂–∞—Ç—å!")

        if sport == "–¥–∞":
            advice.append("–û—Ç–ª–∏—á–Ω–æ, —á—Ç–æ –∑–∞–Ω–∏–º–∞–µ—à—å—Å—è —Å–ø–æ—Ä—Ç–æ–º!")
        else:
            advice.append("–ü–æ–ø—Ä–æ–±—É–π –¥–æ–±–∞–≤–∏—Ç—å —Ñ–∏–∑–∏—á–µ—Å–∫—É—é –∞–∫—Ç–∏–≤–Ω–æ—Å—Ç—å –≤ —Å–≤–æ–π –¥–µ–Ω—å.")

        bot.send_message(message.chat.id, "\n".join(advice))

        # –û—á–∏—Å—Ç–∫–∞
        user_states.pop(user_id)
        user_answers.pop(user_id)





@bot.message_handler(commands=['medicines_info'])
def medicines_info_start(message):
    bot.send_message(
        message.chat.id,
        "–í–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ –ø—Ä–µ–ø–∞—Ä–∞—Ç–∞ (–Ω–∞ –∞–Ω–≥–ª–∏–π—Å–∫–æ–º), —á—Ç–æ–±—ã –ø–æ–ª—É—á–∏—Ç—å –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é."
    )

@bot.message_handler(func=lambda msg: True)
def send_med_info(message):
    drug = message.text.strip().lower()
    params = {'search': drug, 'limit': 1}
    try:
        r = requests.get(FDA_API_URL, params=params)
        data = r.json()
    except Exception as e:
        bot.send_message(message.chat.id, "–û—à–∏–±–∫–∞ –∑–∞–ø—Ä–æ—Å–∞ –∫ API.")
        return

    if 'results' not in data:
        bot.send_message(message.chat.id, "–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –Ω–µ –Ω–∞–π–¥–µ–Ω–∞.")
        return

    info = data['results'][0]
    parts = []
    # –ü—Ä–∏–º–µ—Ä –≤—ã–≤–æ–¥–∞, –∑–∞–≤–∏—Å–∏—Ç –æ—Ç –Ω–∞–ª–∏—á–∏—è –ø–æ–ª–µ–π
    if 'purpose' in info:
        parts.append(f"**Purpose:** {', '.join(info['purpose'])}")
    if 'indications_and_usage' in info:
        parts.append(f"**Usage:** {', '.join(info['indications_and_usage'])}")
    if 'contraindications' in info:
        parts.append(f"**Contraindications:** {', '.join(info['contraindications'])}")
    if 'warnings' in info:
        parts.append(f"**Warnings:** {', '.join(info['warnings'])}")
    if not parts:
        parts.append("–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –Ω–∞–π–¥–µ–Ω–∞, –Ω–æ –¥–µ—Ç–∞–ª–∏ –æ—Ç—Å—É—Ç—Å—Ç–≤—É—é—Ç.")

    reply = "\n\n".join(parts)
    translator = Translator()
    textt = reply
    translated = translator.translate(textt, dest='ru')
    bot.send_message(message.chat.id, translated.text, parse_mode='Markdown')

#---4

bot.polling()
