@bot.message_handler(commands=['health'])
def health_msg(message):
    url = "https://api.algobook.info/v1/randomimage?category=health"
    response = requests.get(url)
    image = BytesIO(response.content)
    image.name = "health.jpg"
    bot.send_photo(message.chat.id,caption="–≠—Ç–æ –≤–∞—à–∞ –∫–∞—Ä—Ç–∏–Ω–∫–∞", photo=image,reply_to_message_id=message.message_id)


@bot.message_handler(commands=['ru_en_training_for_computer'])
def send_russian_english_words_training_listt(message):
    bot.reply_to(message, "–ú–∏–Ω–∏-—Å–ª–æ–≤–∞—Ä—å —Å —Å–ª–æ–≤–∞–º–∏ –∫–æ—Ç–æ—Ä—ã–µ —Å–∑—è–∑–∞–Ω–Ω—ã —Å –∑–¥–æ—Ä–æ–≤—å–µ–º.(–° –ê–Ω–≥–ª–∏–π—Å–∫–æ–≥–æ –Ω–∞ –†—É—Å—Å–∫–∏–π) \n<blockquote><u>–ê–Ω–≥–ª–∏–π—Å–∫–∏–π</u>                          <u>–†—É—Å—Å–∫–∏–π</u> \nHealth                                     –ó–¥–æ—Ä–æ–≤—å–µ \nMedicine                                –ú–µ–¥–∏—Ü–∏–Ω–∞ \nIllness                                      –ë–æ–ª–µ–∑–Ω—å \nSymptom                              –°–∏–º–ø—Ç–æ–º \nPain                                         –ë–æ–ª—å \nDoctor                                    –í—Ä–∞—á \nHospital                                 –ë–æ–ª—å–Ω–∏—Ü–∞ \nNurse                                      –ú–µ–¥—Å–µ—Å—Ç—Ä–∞ \nPrescription                         –†–µ—Ü–µ–ø—Ç  \nReception at the doctor  –ü—Ä–∏—ë–º —É –≤—Ä–∞—á–∞ \nInspection                            –û—Å–º–æ—Ç—Ä \nRecovery                              –í—ã–∑–¥–æ—Ä–æ–≤–ª–µ–Ω–∏–µ \nDiagnosis                             –î–∏–∞–≥–Ω–æ–∑ \nSurgery                                 –û–ø–µ—Ä–∞—Ü–∏—è \nInfection                               –ò–Ω—Ñ–µ–∫—Ü–∏—è \nPrevention                          –ü—Ä–æ—Ñ–∏–ª–∞–∫—Ç–∏–∫–∞ \nExercise                                –£–ø—Ä–∞–∂–Ω–µ–Ω–∏–µ \nNutrition                              –ü–∏—Ç–∞–Ω–∏–µ \nVitamins                               –í–∏—Ç–∞–º–∏–Ω—ã</blockquote> ", parse_mode='HTML')

@bot.message_handler(commands=['ru_en_training_for_phone'])
def send_russian_english_words_training_listt(message):
    bot.reply_to(message, "–ú–∏–Ω–∏-—Å–ª–æ–≤–∞—Ä—å —Å —Å–ª–æ–≤–∞–º–∏ –∫–æ—Ç–æ—Ä—ã–µ —Å–∑—è–∑–∞–Ω–Ω—ã —Å –∑–¥–æ—Ä–æ–≤—å–µ–º.(–° –ê–Ω–≥–ª–∏–π—Å–∫–æ–≥–æ –Ω–∞ –†—É—Å—Å–∫–∏–π) \n<blockquote><u>–ê–Ω–≥–ª–∏–π—Å–∫–∏–π</u>                       <u>–†—É—Å—Å–∫–∏–π</u> \nHealth                                 –ó–¥–æ—Ä–æ–≤—å–µ \nMedicine                            –ú–µ–¥–∏—Ü–∏–Ω–∞ \nIllness                                 –ë–æ–ª–µ–∑–Ω—å \nSymptom                           –°–∏–º–ø—Ç–æ–º  \nPain                                    –ë–æ–ª—å \nDoctor                                –í—Ä–∞—á \nHospital                             –ë–æ–ª—å–Ω–∏—Ü–∞ \nNurse                                 –ú–µ–¥—Å–µ—Å—Ç—Ä–∞ \nPrescription                       –†–µ—Ü–µ–ø—Ç  \nReception at the doctor   –ü—Ä–∏—ë–º —É –≤—Ä–∞—á–∞ \nInspection                         –û—Å–º–æ—Ç—Ä \nRecovery                           –í—ã–∑–¥–æ—Ä–æ–≤–ª–µ–Ω–∏–µ \nDiagnosis                          –î–∏–∞–≥–Ω–æ–∑ \nSurgery                             –û–ø–µ—Ä–∞—Ü–∏—è \nInfection                           –ò–Ω—Ñ–µ–∫—Ü–∏—è \nPrevention                        –ü—Ä–æ—Ñ–∏–ª–∞–∫—Ç–∏–∫–∞ \nExercise                            –£–ø—Ä–∞–∂–Ω–µ–Ω–∏–µ \nNutrition                           –ü–∏—Ç–∞–Ω–∏–µ \nVitamins                           –í–∏—Ç–∞–º–∏–Ω—ã</blockquote> ", parse_mode='HTML')

@bot.message_handler(commands=['ru_en_training_test'])
def send_russian_english_words_training_testt(message):

    words_for_test_x_19_english_for_translated = random.choice(words_for_test_english)
    translator = Translator()
    text = words_for_test_x_19_english_for_translated
    translated = translator.translate(text, dest='ru')
    words_for_test_english.remove(words_for_test_x_19_english_for_translated) 
    words_for_test_x_19_english_1 = random.choice(words_for_test_english)
    words_for_test_x_19_english_2 = random.choice(words_for_test_english)
    words_for_test_english.append(words_for_test_x_19_english_for_translated) 


    markupp = types.InlineKeyboardMarkup(row_width=2)
    markupp.add(
        types.InlineKeyboardButton(words_for_test_x_19_english_1, callback_data="first_choice"),
        types.InlineKeyboardButton(words_for_test_x_19_english_for_translated, callback_data="second_choice"),
        types.InlineKeyboardButton(words_for_test_x_19_english_2, callback_data="third_choice")
    )

    bot.send_message(message.chat.id, 'üìã –ü–µ—Ä–µ–≤–µ–¥–∏ —Å–ª–æ–≤–æ '+ translated.text +' –Ω–∞ –ê–Ω–≥–ª–∏–π—Å–∫–∏–π \n–í–∞—Ä–∏–∞–Ω—Ç—ã:', reply_markup=markupp)

@bot.callback_query_handler(func=lambda call: True)
def handle_callback(call):
    if call.data == "first_choice":
        first_choice(call.message)

    elif call.data == "second_choice":
        second_choice(call.message)

    elif call.data == "third_choice":
        third_choice(call.message)


@bot.message_handler(commands=['1'])
def first_choice(message):
    bot.send_message(message.chat.id, '–ù–µ –ø—Ä–∞–≤–∏–ª—å–Ω–æ! –ù–∏—á–µ–≥–æ —Å—Ç—Ä–∞—à–Ω–æ–≥–æ. –í —Å–ª–µ–¥—É—é—à–∏–π —Ä–∞–∑ —Ç–æ—á–Ω–æ –ø–æ–ª—É—á–∏—Ç—Å—è! \n–ï—Å–ª–∏ —Ö–æ—Ç–∏—Ç–µ –ø–æ–≤—Ç–æ—Ä–∏—Ç—å –∏—Å–ø–æ–ª—å–∑—É–π—Ç–µ —ç—Ç—É –∫–æ–º–∞–Ω–¥—É: /ru_en_training_test')

@bot.message_handler(commands=['3'])
def second_choice(message):
    bot.send_message(message.chat.id, '–ü—Ä–∞–≤–∏–ª—å–Ω–æ!!! –£ –≤–∞—Å —Ö–æ—Ä–æ—à–æ –ø–æ–ª—É—á–∞–µ—Ç—Å—è –ø—Ä–æ–¥–æ–ª–∂–∞–π—Ç–µ –≤ —Ç–æ–º –∂–µ –¥—É—Ö–µ! \n–ï—Å–ª–∏ —Ö–æ—Ç–∏—Ç–µ –ø–æ–≤—Ç–æ—Ä–∏—Ç—å –∏—Å–ø–æ–ª—å–∑—É–π—Ç–µ —ç—Ç—É –∫–æ–º–∞–Ω–¥—É: /ru_en_training_test')

@bot.message_handler(commands=['3'])
def third_choice(message):
    bot.send_message(message.chat.id, '–ù–µ –ø—Ä–∞–≤–∏–ª—å–Ω–æ! –ù–∏—á–µ–≥–æ —Å—Ç—Ä–∞—à–Ω–æ–≥–æ. –í —Å–ª–µ–¥—É—é—à–∏–π —Ä–∞–∑ —Ç–æ—á–Ω–æ –ø–æ–ª—É—á–∏—Ç—Å—è! \n–ï—Å–ª–∏ —Ö–æ—Ç–∏—Ç–µ –ø–æ–≤—Ç–æ—Ä–∏—Ç—å –∏—Å–ø–æ–ª—å–∑—É–π—Ç–µ —ç—Ç—É –∫–æ–º–∞–Ω–¥—É: /ru_en_training_test')

